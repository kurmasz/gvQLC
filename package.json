{
  "name": "gvqlc",
  "displayName": "gvQLC",
  "description": "A tool for generating custom quiz questions over submitted code",
  "icon": "icons/gv.png",
  "preview": true,
  "private": true,
  "version": "1.0.0",
  "main": "./out/src/extension.js",
  "author": {
    "name": "Zachary Kurmas"
  },
  "publisher": "Kurmas",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kurmasz/gvQLC.git"
  },
  "categories": [
    "Other",
    "Testing"
  ],
  "contributes": {
    "commands": [
      {
        "command": "gvqlc.helloWorld",
        "title": "gvQLC: Hello World"
      },
      {
        "command": "gvqlc.viewQuizQuestions",
        "title": "gvQLC: View Quiz Questions"
      },
      {
        "command": "gvqlc.addQuizQuestion",
        "title": "gvQLC: Add Quiz Question"
      },
      {
        "command": "gvqlc.setLLMApiKey",
        "title": "gvQLC: Set LLM API Key"
      },
      {
        "command": "gvqlc.exportQuiz",
        "title": "gvQLC: Export Quiz"
      }
    ],
    "configuration": {
    "title": "gvQLC",
    "properties": {
      "gvqlc.llm.provider": {
        "type": "string",
        "enum": ["openai", "azure", "anthropic", "ollama", "gemini"],
        "default": "gemini",
        "description": "LLM provider for question generation",
        "enumDescriptions": [
          "OpenAI (GPT-5, GPT-5-nano)",
          "Azure OpenAI Service",
          "Anthropic (Claude)",
          "Ollama (local models: WIP!)",
          "Google Gemini"
        ]
      },
      "gvqlc.llm.apiKeyInfo": {
        "type": "null",
        "markdownDescription": "**API Key Required**: **[Set API Key](command:gvqlc.setLLMApiKey)** to securely store your key.\n\nAPI keys are stored in your system keychain, not in settings. Please ignore the settings.json link below."
      },
      "gvqlc.llm.baseURL": {
        "type": "string",
        "description": "Custom API endpoint (optional)",
        "markdownDescription": "Override default endpoint. Ex:\n- Azure: `https://YOUR-RESOURCE.openai.azure.com/`\n- Ollama: `http://localhost:11434/v1`."
      },
      "gvqlc.llm.model": {
        "type": "string",
        "description": "Model name (optional)",
        "markdownDescription": "Specifies model, small models recommended. Ex:\n- OpenAI: `gpt-5-nano`\n- Anthropic: `claude-haiku-4-5`\n- Gemini: `gemini-2.5-flash`\n- Ollama: `llama3.1`, `codellama`."
      }
    }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run lint",
    "lint": "eslint src",
    "watch": "tsc -watch -p ./",
    "test:system:base": "extest setup-and-run './out/test/system/*.test.js' --code_version max --code_settings settings.json --extensions_dir .test-extensions",
    "test:system:base_all": "extest setup-and-run './out/test/system/*.test.js' --code_version max --code_settings settings.json --extensions_dir .test-extensions",
    "test:system": "VSCODE_TEST_ZK=true NODE_OPTIONS='-r source-map-support/register' npm run test:system:base",
    "test:system:run_only": "tsc -p ./ && VSCODE_TEST_ZK=true EXTENSION_DEV_PATH=$INIT_CWD extest run-tests './out/test/system/*.test.js' --code_version max --code_settings settings.json",
    "test:unit": "tsc -p ./ && TEST_TYPE=unit mocha 'out/src/test/*.test.js' --ui tdd",
    "test": "npm run test:unit && npm run test:system"
  },
  "dependencies": {
    "openai": "^4.77.3",
    "@google/generative-ai": "^0.21.0",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/chai": "^4.3.16",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.3.1",
    "@types/sinon": "^17.0.4",
    "@types/turndown": "^5.0.6",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "chai": "^4.4.1",
    "eslint": "^9.36.0",
    "eslint-define-config": "^2.1.0",
    "fs-extra": "^11.3.2",
    "mocha": "^11.7.2",
    "mustache": "^4.2.0",
    "os": "^0.1.2",
    "sinon": "^21.0.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.9.2",
    "vscode-extension-tester": "^8.18.0"
  }
}
